{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"root": true,
	"plugins": ["@typescript-eslint"],
	"rules": {},
	"overrides": [
		{
			"files": "**/*.vue",
			"parser": "@vue-eslint/parser"
		},
		{
			"files": "**/*.test.ts",
			"rules": {
				"@typescript-eslint/no-unsafe-call": "off"
			}
		}
	]
}
